#include <stdio.h>

struct Diem3D {
    float x;
    float y;
    float z;
};

void NhapDiem3D(Diem3D &d) {
    printf("Nhap toa do x: ");
    scanf("%f", &d.x);
    printf("Nhap toa do y: ");
    scanf("%f", &d.y);
    printf("Nhap toa do z: ");
    scanf("%f", &d.z);
}

void XuatDiem3D(Diem3D d) {
    printf("Toa do diem la: (%.2f, %.2f, %.2f)\n", d.x, d.y, d.z);
}

int main() {
    Diem3D d;
    NhapDiem3D(d);
    printf("Diem vua nhap la: ");
    XuatDiem3D(d);
    return 0;
}